##########################################################################################################################
# Cloud_STM32F429IGTx_FIRE GCC compiler config
##########################################################################################################################

# ------------------------------------------------
# Generic Makefile (based on gcc)
# ------------------------------------------------
# compile option

#######################################
# use ethernet
#######################################
WITH_LWIP  := no

#######################################
# use usart AT command
#######################################
WITH_AT_FRAMEWORK := yes
ifeq ($(WITH_AT_FRAMEWORK), yes)
#ESP8266   # SIM900A  # NB_NEUL95  # ALL
	NETWORK_TYPE := NB_NEUL95
endif

#######################################
# use mbedtls
#######################################
WITH_DTLS := yes


#######################################
# Firmware Over-The-Air 
#######################################
USE_FOTA := yes

#######################################
# Firmware Over-The-Air 
#######################################
USE_SOTA := no

#######################################
# Lwm2m bootstrap program 
#######################################
LWM2M_BOOTSTRAP := yes

#######################################
# Lwm2m bootstrap used 
#######################################
SUPPORT_DTLS_SRV := no

#######################################
# Lwm2m core log
#######################################
LWM2M_WITH_LOGS := yes

#######################################
# Agenttiny log
#######################################
ATINY_DEBUG := yes


